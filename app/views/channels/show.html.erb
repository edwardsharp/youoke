<script>
$(function() {
  $('#playPlayer').click(function(){
    App.qs.playPlayer();
  });
  $('#refreshPlayer').click(function(){
    App.qs.reloadPlayer();
  });
  $('#pausePlayer').click(function(){
    App.qs.pausePlayer();
  });
});
</script>


<div class="row">
 
  <div class="col s12 m8">
    <%= render 'qs/search', channel: @channel, current_user: @current_user %>
  </div>

  <div class="col s12 m4">
    <%= render 'qs/qs', channel: @channel %>
  
    <div id="channelContent">
      <div>
         HELLO <%= @current_user.name %>
         (<%= link_to 'logout', session_path, method: :delete %>)
      </div>

      <%= @channel.title %><br>
      <%= @channel.content %><br>

      <%= link_to 'player', channel_player_path(@channel) %> 
      <a class="btn-floating waves-effect waves-light black" id="playPlayer"><i class="material-icons">play_circle_outline</i></a>
      <a class="btn-floating waves-effect waves-light black" id="pausePlayer"><i class="material-icons">pause_circle_outline</i></a>
      <a class="btn-floating waves-effect waves-light black" id="refreshPlayer"><i class="material-icons">refresh</i></a>

    </div>

  </div>


</div>

<%= render 'comments/comments', channel: @channel %>
